<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
         xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="20dp"
            tools:context=".User.VerificationActivity">

        <LinearLayout android:layout_width="match_parent"
                      android:padding="20dp"
                      android:orientation="vertical"
                      android:background="@drawable/ic_background"
                      android:layout_height="@dimen/_350sdp"
        >

            <TextView android:layout_width="wrap_content"
                      android:text="@string/Phone_Verification"
                      android:layout_gravity="center_horizontal"
                      android:layout_margin="20dp"
                      android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                      android:gravity="center"
                      android:layout_height="wrap_content"
                      android:textColor="@color/colorPrimary"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/Enter_your_otp"
                      android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                      android:layout_gravity="center"
                      android:gravity="center_horizontal"
                      android:layout_marginTop="@dimen/_15sdp"
                      android:textColor="@color/colorPrimaryDark"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:weightSum="2">
                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="0.5"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">

                    <EditText
                            android:id="@+id/fristdigit"
                            style="@style/EdittextforOtp"
                    />
                    <view style="@style/EdittextforOtp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="0.5"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">
                    <EditText
                            android:id="@+id/seconddigit"
                            style="@style/EdittextforOtp"

                    />
                    <view style="@style/EdittextforOtp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="0.5"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">
                    <EditText
                            android:id="@+id/thrddigit"
                            style="@style/EdittextforOtp"

                    />
                    <view style="@style/EdittextforOtp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp"
                              android:layout_weight="0.5"
                              android:orientation="vertical"
                              android:layout_height="wrap_content">
                    <EditText
                            android:id="@+id/fourdigit"
                            style="@style/EdittextforOtp"
                    />
                    <view style="@style/EdittextforOtp"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                    android:layout_marginTop="50dp"
                    android:text="@string/Verifiration"
                    android:id="@+id/btnSend"
                    style="@style/buttonstyle"/>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center"
            >
                <TextView
                        android:id="@+id/fristotp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dont_recevie"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/colorPrimary"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/fristotp"
                        android:text="@string/OTP"
                        android:textSize="@dimen/_15sdp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_marginLeft="@dimen/_10sdp"
                />

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</layout>